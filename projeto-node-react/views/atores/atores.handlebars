<h1>Atores</h1>

<form action="/atores/{{#if action }}save{{else}}create{{/if}}" method="post">

    <input type="hidden" name="id" value="{{ator_editing.id}}">

    <label for="nome">Nome</label><br>

    <input type="text" id="nome" name="nome" value="{{ator_editing.nome}}" required><br><br>

    <label for="personagem">Personagem</label><br>

    <input type="text" id="personagem" name="personagem" value="{{ator_editing.personagem}}" required><br><br>

    <label for="idade">Idade</label><br>

    <input type="number" id="idade" name="idade" value="{{ator_editing.idade}}" required><br><br>

    <label for="salario">Salario</label><br>

    <input type="number" id="salario" name="salario" value="{{ator_editing.salario}}" required><br><br>

    <button>{{#if action }}Editar{{else}}Criar{{/if}}</button>

</form>

<hr>

<table>

    <thead>

        <tr>

            <th>Nome</th>

            <th>Personagem</th>

            <th>Idade</th>

            <th>Salario</th>

            <th>Ações</th>

        </tr>

    </thead>

    <tbody>

        {{#each atores}}

        <tr>

            <td>{{this.nome}}</td>

            <td>{{this.personagem}}</td>

            <td>{{this.idade}}</td>

            <td>{{this.salario}}</td>

            <td style="display: flex; justify-content: space-evenly;">

                <form action="/atores/edit" method="post">

                    <input type="hidden" name="id" value="{{this.id}}">

                    <button>Edit</button>

                </form>

                <form action="/atores/delete" method="post">

                    <input type="hidden" name="id" value="{{this.id}}">

                    <button>Del</button>

                </form>

            </td>

        </tr>

        {{/each}}

    </tbody>

</table>
