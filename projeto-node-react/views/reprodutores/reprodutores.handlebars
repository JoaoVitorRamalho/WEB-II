<h1>Reprodutores</h1>

<form action="/reprodutores/{{#if action }}save{{else}}create{{/if}}" method="post">

    <input type="hidden" name="id" value="{{reprodutor_editing.id}}">

    <label for="nome">Nome</label><br>

    <input type="text" id="nome" name="nome" value="{{reprodutor_editing.nome}}" required><br><br>

    <label for="forma">Forma</label><br>

    <input type="text" id="forma" name="forma" value="{{reprodutor_editing.forma}}" required><br><br>

    <button>{{#if action }}Editar{{else}}Criar{{/if}}</button>

</form>

<hr>

<table>

    <thead>

        <tr>

            <th>Nome</th>

            <th>Forma</th>

            <th>Ações</th>

        </tr>

    </thead>

    <tbody>

        {{#each reprodutores}}

        <tr>

            <td>{{this.nome}}</td>

            <td>{{this.forma}}</td>

            <td style="display: flex; justify-content: space-evenly;">

                <form action="/reprodutores/edit" method="post">

                    <input type="hidden" name="id" value="{{this.id}}">

                    <button>Edit</button>

                </form>

                <form action="/reprodutores/delete" method="post">

                    <input type="hidden" name="id" value="{{this.id}}">

                    <button>Del</button>

                </form>

            </td>

        </tr>

        {{/each}}

    </tbody>

</table>
